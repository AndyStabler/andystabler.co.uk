<% content_for :custom_social do %>
  <%= social_meta_tags :description => strip_tags(current_article.summary) %>
<% end %>
<% content_for :css do %>
  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.8.0/styles/darcula.min.css">
<% end %>
<% content_for :js do %>
  <script type="text/javascript" async
  src="https://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML">
</script>
<% end %>
<% content_for :footer_js do %>
  <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.8.0/highlight.min.js"></script>
  <script>hljs.initHighlightingOnLoad();</script>
  <script id="dsq-count-scr" src="//andystabler.disqus.com/count.js" async></script>
<% end %>
<% wrap_layout :main do %>
  <div class="blog-post-container">
    <section class="blog-post-navigation">
      <% if current_article.previous_article %>
        <p class="prev-post">
          Previous post: <%= link_to current_article.previous_article.title, current_article.previous_article.url %>
        </p>
      <% end %>
      <% if current_article.next_article %>
        <p class="next-post">
          Next post: <%= link_to current_article.next_article.title, current_article.next_article.url %>
        </p>
      <% end %>
    </section>
    <section class="blog-post">
      <div class="blog-post-header">
        <h1><%= current_article.title %></h1>
        <p class="article-published-on"><%= current_article.date.strftime("%d %b %Y") %></p>
      </div>
      <div class="blog-post-content">
        <%= yield %>
      </div>
    </section>
    <section class="comments">
      <%= partial "layouts/blog/disqus" %>
    </section>
  </div>
<% end %>
